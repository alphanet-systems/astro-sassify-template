<section id="featured-work" class="section py-16 md:py-24 bg-white dark:bg-secondary-900">
  <div class="container-custom">
    <div class="text-center max-w-2xl mx-auto mb-12 md:mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-800 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
        Showcasing Our Best
      </span>
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-secondary-900 dark:text-white">Featured Projects</h2>
      <p class="text-lg text-secondary-600 dark:text-secondary-300">
        Here's a glimpse of the impactful solutions we've delivered for our clients.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {featuredProjects.map((project, index) => (
        <div class="gsap-featured-work-item group rounded-lg overflow-hidden shadow-lg bg-gray-50 dark:bg-secondary-800 transition-shadow duration-300 hover:shadow-xl">
          <a href={`/portfolio/${project.slug}`} class="block">
            <img src={project.imageUrl} alt={project.title} class="w-full h-64 object-cover transition-transform duration-300 group-hover:scale-105" />
            <div class="p-6">
              <p class="text-sm text-primary-600 dark:text-primary-400 mb-1 font-medium">{project.category}</p>
              <h3 class="text-xl font-semibold mb-2 text-secondary-900 dark:text-white">{project.title}</h3>
              <p class="text-secondary-600 dark:text-secondary-400 text-sm mb-4">{project.description}</p>
              <span class="inline-flex items-center text-primary-600 dark:text-primary-400 font-medium group-hover:underline">
                View Case Study
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
                </svg>
              </span>
            </div>
          </a>
        </div>
      ))}
    </div>

    <div class="mt-12 md:mt-16 text-center">
      <a href="/portfolio" class="btn-primary text-lg px-8 py-3">
        Explore Our Portfolio
      </a>
    </div>
  </div>
</section>
